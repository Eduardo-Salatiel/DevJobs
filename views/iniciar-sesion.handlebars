<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label for="email">E-mail</label>
            <input type="email" name="email" id="email" required>
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
        </div>
        <div class="campo acciones">
            <a href="/crear-cuenta">Crea una Cuenta</a>
            <a href="/reestablecer-password">Olvide mi Password</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesion" class="btn btn-azul">
        </div>
    </form>
</main>