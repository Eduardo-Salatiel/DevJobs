<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre"> Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Tu Nombre" value={{usuario.nombre}}>
        </div>
        <div class="campo">
            <label for="email"> E-mail</label>
            <input type="text" name="email" id="email" placeholder="Tu E-mail" value={{usuario.email}}>
        </div>
        <div class="campo">
            <label for="password"> E-mail</label>
            <input type="password" name="password" id="password" placeholder="Tu Password">
        </div>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" id="imagen" placeholder="Tu imagen de perfil" >
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" values="Guardar Cambios">
        </div>
    </form>
</main>